public class hw8_P5 {

	public static void main(String[] args) {
		
		int a = 333;
		
		System.out.println(checkIntSymmetry(a));
		
	}

	public static boolean checkIntSymmetry(int a){
		boolean isSymmetric = false;
		int tmp = a;
		int aDigits = 1;
		
		while ((tmp=tmp/10) != 0){
			aDigits++;
		}
		
		int[] aInDigits = new int[aDigits];
		
		for(int i = 0; i < aDigits; i++){
			aInDigits[aDigits-1-i] = a % 10;
			a = a / 10;
		//	System.out.print(aInDigits[aDigits -1 - i] + " ");
		}
		
		for(int i = 0; i< (aDigits + aDigits % 2) / 2; i++){
			if (aInDigits[i] == aInDigits[aDigits-i]){
				isSymmetric = true;
			}
		}
		
		return isSymmetric;
	}

	
}