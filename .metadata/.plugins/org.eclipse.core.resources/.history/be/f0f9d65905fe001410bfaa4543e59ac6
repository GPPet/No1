package Person;

public class Assistant extends Lecturer{
	private boolean chief;
	
	public Assistant(){
		super();
		setChief(false);
	}
	
	public Assitant(String firstName, String familyName, String uniName, int yearsOfService, boolean chief){
		super(firstName, familyName, uniName, yearsOfService);
		setChief(chief);
	}
	
	public boolean getChief(){
		return chief;
	}
	public void setChief(boolean chief){
		this.chief = chief;
	}

	public void printProfInfo(){
		System.out.println(familyName + "\nTitle:\t" + title + "\nYears of Service:\t" + yearsOfService);
	}
	
	@Override
	public void checkHomework(){
		System.out.println(title + " " + familyName + " gives homeworks at each lecture and checks them before the next one.");
	}
}
