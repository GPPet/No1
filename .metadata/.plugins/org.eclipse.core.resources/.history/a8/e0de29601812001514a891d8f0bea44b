package lw10_Student;

import java.io.ObjectInputStream.GetField;
import java.util.ArrayList;
import java.util.HashMap;

public class Student {
	// Напрате клас Student, който съдържа полета: име, фамилия, номер, 
	// както и HashMap, който да съдържа всички негови предмети и съответно оценки по тях.
	// Реализирайте метод addSubjectMark, който добавя оценка към определен предмет.
	// Направете метод calculateAvarageMark(), който приема предмет и връща средния успех по предмета.
	// Демонстрирайте класа като създадете 3 ученика с поне по 5 предмета и 3 оценки по всеки от тях.

	private String firstName;
	private String familyName;
	private int facNo;
	private String subject;
	private ArrayList<Integer> marks;
	private HashMap<String, ArrayList<Float>> subjectMarks;
	
	public Student(){
	}
	
	public Student(String firstName, String familyName, int facNo, HashMap<String, ArrayList<Float>> subjectMarks) {
		this.firstName = firstName;
		this.familyName = familyName;
		this.facNo = facNo;
		this.subjectMarks = subjectMarks;
	}
	
	public String getFirstName() {
		return firstName;
	}
	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	public String getFamilyName() {
		return familyName;
	}
	public void setFamilyName(String familyName) {
		this.familyName = familyName;
	}
	public int getFacNo() {
		return facNo;
	}
	public void setFacNo(int facNo) {
		if (facNo > 0) this.facNo = facNo;
		else this.facNo = -1;
	}
	
	
	public HashMap<String, ArrayList<Float>> getSubjectMarks() {
		return subjectMarks;
	}

	public void setSubjectMarks(HashMap<String, ArrayList<Float>> subjectMarks) {
		this.subjectMarks = subjectMarks;
	}
		
	public String getSubject() {
		return subject;
	}

	public void setSubject(String subject) {
		this.subject = subject;
	}

	public ArrayList<Integer> getMarks() {
		return marks;
	}

	public void setMarks(ArrayList<Integer> marks) {
		this.marks = marks;
	}

	
	public static ArrayList<Integer> addSubjectMark(ArrayList<Integer> subject, int mark){
		if(mark >= 2.0f && mark <= 6.0f) subject.add(mark);
		return subject;
	}

