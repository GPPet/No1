import java.util.HashMap;
import java.util.Scanner;


public class hw10_P5 {

	public static void main(String[] args) {
		// P5.
		// Напишете програма, която приема текст и извежда на екрана всички думи, които са уникални (срещат се само веднъж).

		Scanner input = new Scanner(System.in);
		System.out.println("Please, enter the text:");
		String text = input.nextLine();
		
		String[] splitText = text.split("\\W");
		
		System.out.println("Unique words:");
		HashMap<String, Integer> wordCount = new HashMap<String, Integer>();
		
		for (int i = 0; i < splitText.length; i++){
			if(splitText[i]!=" "){
				String word = splitText[i].toLowerCase();
				wordCount.putIfAbsent(word, text.indexOf(splitText[i]));
			}	
		}
		
		System.out.println(wordCount);
		
	}

}
