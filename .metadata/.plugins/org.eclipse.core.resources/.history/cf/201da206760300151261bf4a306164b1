import java.util.Scanner;


public class hw9_P3new  {
	
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String sentance = "Chemistry is like magic. I love theoretical chemistry. Quantum chemistry, a field of chemistry, is very interesting.";
		
		String[] partsClean = sentance.split(" |, |. |");
		
		for (String part : partsClean) {
			System.out.println(part);
		}
		
		String word = "chemistry";
		int counter = 0;
		
		for (String part : partsClean) {
			if ( part.equals(word)){
				counter++;
			}
		}
				
		System.out.println(counter);

	}

}
