package stock;

public class Meat extends Stock{
	protected String meatType; //chicken, beef, pork, etc.
	protected int bestBeforeDays;
	protected float kilo; //available amount
	protected boolean frozen; //frozen or fresh
	
	public Meat(){
		setPrice(0);
		setAvailable(false);
		setMeatType("");
		setBestBeforeDays(0);
		setKilo(0f);
		setFrozen(false);
	}
	
	public Meat(int price, boolean available, String meatType, int bestBeforeDays, float kilo, boolean frozen){
		setPrice(price);
		setAvailable(available);
		setMeatType(meatType);
		setBestBeforeDays(bestBeforeDays);
		setKilo(kilo);
		setFrozen(frozen);
	}
	
	public String getMeatType(){
		return meatType;
	}
	public void setMeatType(String MeatType){
		this.meatType = meatType;
	}
	
	public int getBestBeforeDays(){
		return bestBeforeDays;
	}
	public void setBestBeforeDays(int bestBeforeDays){
		this.bestBeforeDays = bestBeforeDays;
	}
	
	public float getKilo(){
		return kilo;
	}
	public void setKilo(float kilo){
		this.kilo = kilo;
	}
	
	public boolean getFrozen(){
		return frozen;
	}
	public void setFrozen(boolean frozen){
		this.frozen = frozen;
	}

}
