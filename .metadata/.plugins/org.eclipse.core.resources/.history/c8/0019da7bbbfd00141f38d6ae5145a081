package stock;

public class Vegies extends Stock {
	protected int bestBeforeDays;
	protected boolean imported;
	
	public Vegies(){
		super();
		this.bestBeforeDays = 0;
		this.imported = false;
	}

	public Vegies(int price, boolean available, int bestBeforeDays, boolean imported){
		super(price, available);
		
		setBestBeforeDays(bestBeforeDays);
		setImported(imported);
	}
	
	public int getBestBeforeDays(){
		return bestBeforeDays;
	}
	public void setBestBeforeDays(int bestBeforeDays){
		this.bestBeforeDays = bestBeforeDays;
	}
	
	public boolean getImported(){
		return imported;
	}
	public void setImported(boolean imported){
		this.imported = imported;
	}
}
