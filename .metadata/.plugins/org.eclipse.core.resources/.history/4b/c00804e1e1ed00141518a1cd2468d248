package hw2;

import java.util.Scanner;

public class Problem6 {
	// Circle
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in, "UTF-8");
		System.out.println("Please, enter the radius of the circle (r, in cm)");
		float radius = input.nextFloat();
		
		//pi
		float a = 22f;
		float b = 7f;
		float pi = a/b;
		
		//perimeter
		float perim = 2*pi*radius;
		
		//area
		float area = pi*radius*radius;
		
		System.out.println("The perimeter and area of a circle with radius r=" + radius + "cm are " + perim + "cm and " + area + "cm\u00B2, respectively.");
		
	}	
}