package stock;

public class Dessert extends Stock{
	protected boolean withSugar;
	protected int pieces;
	
	public Dessert(){
		super();
		this.withSugar = false;
		this.pieces = 0;
	}
	
	public Dessert(int price, boolean available, boolean withSugar, int pieces){
		super(price, available);
		
		setWithSugar(withSugar);
		setPieces(pieces);
	}
	
	public boolean getWithSugar(){
		return withSugar;
	}
	public void setWithSugar(boolean withSugar){
		this.withSugar = withSugar;
	}
	
	public int getPieces(){
		return pieces;
	}
	public void setPieces(int pieces){
		this.pieces = pieces;
	}

}
