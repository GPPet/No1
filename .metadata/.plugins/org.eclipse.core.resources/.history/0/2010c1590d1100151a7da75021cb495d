package lw10_Student;

import java.io.ObjectInputStream.GetField;
import java.util.ArrayList;

public class Subject {
	private ArrayList<Float> subjectMarks;

	public Subject(){
	}
	
	public Subject(ArrayList<Float> subjectMarks){
		setSubjectMarks(getSubjectMarks());
	}
	
	public ArrayList<Float> getSubjectMarks() {
		return subjectMarks;
	}
	public void setSubjectMarks(ArrayList<Float> subjectMarks) {
		this.subjectMarks = subjectMarks;
	}
	
	public static ArrayList<Float> addSubjectMark(ArrayList<Float> subjectMarks, float mark){
		if(mark >= 2.0f && mark <= 6.0f) subjectMarks.add(mark);
		return subjectMarks;
	}
	
}
